{

	"manifest_version": 2,
	"name": "BuffaloBuffaloBuffalo",
	"version": "1.0",

	"description": "Replaces words with other words. And saves profiles of words to replace with other words. Like Buffalo. Code based on the Emoji-Substitution extension.",

	"icons": {
		"48": "icons/buffalo-48.png",
		"96": "icons/buffalo-96.png"
	},

	"permissions": [
		"activeTab"
	],
	
	"applications": {
		"gecko": {
			"id": "buffalobuffalobuffalo@example.com"
		}
	},
  
	"content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./popup/BuffaloBuffaloBuffalo.js", "./popup/content_scripts/buffaloify.js"]
    }
  ]
	
}